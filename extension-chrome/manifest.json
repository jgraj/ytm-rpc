{
	"manifest_version": 3,
	"name": "Discord Rich Presence for YouTube Music",
	"description": "Display currently playing song from YouTube Music on your Discord profile.",
	"version": "1.0",
	"content_scripts": [
		{
			"matches": [ "https://music.youtube.com/*" ],
			"js": [ "content.js" ]
		}
	],
	"background": {
		"service_worker": "background.js"
	},
	"permissions": [
		"http://localhost/*",
		"tabs",
		"activeTab"
	],
	"icons": { "512": "logo.png" }
}